<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.uhi.gourmet.pay.PaymentMapper">


	<insert id="insertPayment">
		 INSERT INTO PAY (
        PAY_ID,
        IMP_UID,
        AMOUNT,
        PAY_DATE) 
        VALUES (
        SEQ_PAY.NEXTVAL,
        #{imp_uid},
        #{amount},
        SYSDATE)
	</insert>


	<select id="getPayById" resultType="com.uhi.gourmet.pay.PayVO">
        SELECT * FROM PAY WHERE pay_id = #{pay_id}
    </select>
    
    <select id="getPayIdByImpUid">
        SELECT pay_id FROM PAY WHERE imp_uid = #{imp_uid}
    </select>

	<delete id="deletePayById">
		DELET FROM PAY WHERE PAY = #{pay_id}
	</delete>
	
</mapper>